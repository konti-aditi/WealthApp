{
  "name": "the-date-crew-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "start": "node --max-old-space-size=4096 src/server.js",
    "dev:server": "nodemon --max-old-space-size=4096 ./src/server.js",
    "format": "prettier --write \"app/**/*.{js,jsx,json,md}\"",
    "lint": "eslint index.js App.js app --fix --ext .js --max-warnings 0 && yarn format",
    "start:server": "pm2 start src/server.js --name my-node-app --node-args=\"--max-old-space-size=4096\"",
    "stop": "pm2 stop my-node-app",
    "restart": "pm2 restart my-node-app",
    "logs": "pm2 logs my-node-app",
    "run-app": "node --max-old-space-size=4096 src/server.js",
    "cleanup-temp": "node cleanup-temp.js",
    "cleanup-temp:all": "node cleanup-temp.js --all"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "axios": "^1.8.3",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "ffmpeg": "^0.0.4",
    "follow-redirects": "^1.15.3",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.4.3",
    "mqtt": "^5.0.3",
    "multer": "^1.4.5-lts.1",
    "multer-google-storage": "^1.3.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.3",
    "uuid": "^11.1.0"
  }
}
